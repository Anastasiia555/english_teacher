<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorButtonNormal">@color/blue</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonCircleTheme">
        <item name="android:background">@drawable/button_add_circle</item>
    </style>

    <style name="ButtonNavigationTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_navigation_blue</item>
    </style>

    <style name="ButtonNavigationRedTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_navigation_red</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorButtonNormal">@color/blue</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>
