<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liner_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="10dp">

        <fragment
            android:id="@+id/images_fragment"
            android:name="com.evedev.languageteacher.fragments.ImageFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <fragment
        android:id="@+id/bottom_direction_fragment"
        android:name="com.evedev.languageteacher.fragments.BottomDirectionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>